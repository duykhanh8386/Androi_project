<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.grade.student.StudentGradeFragment">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomButton"
        android:padding="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_grade"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Điểm thường xuyên (Đã có ID) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grade_tx"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tvGradeTxValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                tools:text="8.0"/>

            <!-- Điểm giữa kỳ (Đã có ID) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grade_gk"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tvGradeGkValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                tools:text="9.0"/>

            <!-- Điểm cuối kỳ (Đã có ID) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grade_ck"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tvGradeCkValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="14sp"
                android:layout_marginBottom="32dp"
                tools:text="10.0"/>

            <!-- Điểm tổng kết (Đã có ID) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm tổng kết"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_marginBottom="32dp">
                <TableRow
                    android:background="@android:color/darker_gray"
                    android:padding="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Điểm TB"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:padding="4dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Xếp loại"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:padding="4dp"
                        android:gravity="center"/>
                </TableRow>
                <TableRow
                    android:background="@android:color/white"
                    android:padding="8dp">
                    <TextView
                        android:id="@+id/tvAverageScore"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tvRankValue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:gravity="center"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Button (Giữ nguyên) -->
    <LinearLayout
        android:id="@+id/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:visibility="gone"
        tools:visibility="visible">
        <Button
            android:id="@+id/btnBack"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_go_back"
            android:textSize="14sp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            app:cornerRadius="4dp"/>
    </LinearLayout>

    <!-- ProgressBar (Đã có) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>